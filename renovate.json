{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":gitSignOff"
  ],
  "labels": [
    "changelog:dependencies"
  ],
  "suppressNotifications": ["prEditedNotification"],
  "packageRules": [
    {
      "description": "Disable major updates on docker-compose files for integration tests",
      "matchFileNames": ["docker-compose/**/docker-compose.yml"],
      "major": {
        "enabled": false
      }
    }
  ]
}
